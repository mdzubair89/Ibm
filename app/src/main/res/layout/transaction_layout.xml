<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/TransactionTextFirst"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:textStyle="bold"
        android:background="@drawable/transaction_listview_border"
        android:padding="2dp"
        android:text="First"/>

    <TextView
        android:id="@+id/TransactionTextSecond"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:background="@drawable/transaction_listview_border"
        android:padding="2dp"
        android:text="Second" />

    <TextView
        android:id="@+id/TransactionTextThird"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:padding="2dp"
        android:textAlignment="center"
        android:background="@drawable/transaction_listview_border"
        android:text="Third"/>

    <TextView
        android:id="@+id/TransactionTextFourth"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:padding="2dp"
        android:background="@drawable/transaction_listview_border"
        android:text="Fourth"/>


    <TextView
        android:id="@+id/TransactionTextFifth"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="2dp"
        android:background="@drawable/transaction_listview_border"
        android:text="Fifth" />

    <!--
    <TextView
        android:id="@+id/TransactionTextSixth"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:text="Sixth"/>

    <TextView
        android:id="@+id/TransactionTextSeventh"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:text="Seventh"/> -->

</LinearLayout>

