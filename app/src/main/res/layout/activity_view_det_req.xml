                android:text="Seperate Contribution:"
                android:padding="4dp"
                android:background="@drawable/textview_border"
                android:textColor="@color/abc_input_method_navigation_guard" />

            <TextView android:id="@+id/textViewReqSepAmt"
                android:layout_width="0dp"
