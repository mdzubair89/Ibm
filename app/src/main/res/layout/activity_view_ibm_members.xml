<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ibm.imfras_baithul_mal.ViewIbmMembersActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_orange_light"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:shadowColor="#0000FF"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:text="COMMITTEE MEMBERS OF IBM"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#000080"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@mipmap/ameen" />

                    <TextView
                        android:id="@+id/textViewAmeen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" \n Ameenul huq \n PRESIDENT"
                        android:textAlignment="center"
                        android:textColor="@color/abc_input_method_navigation_guard"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@mipmap/rilwan" />


                    <TextView
                        android:id="@+id/textViewRilwan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" \n Rilwan \n TREASURER"
                        android:textAlignment="center"
                        android:textColor="@color/abc_input_method_navigation_guard"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/textViewContributers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:shadowColor="#0000FF"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:text="EC COMMITTEE MEMBERS"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#000080"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@mipmap/ibrahim" />

                <TextView
                    android:id="@+id/textViewIbrahim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" \n Ibrahim "
                    android:textAlignment="center"
                    android:textColor="@color/abc_input_method_navigation_guard"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@mipmap/sha" />


                <TextView
                    android:id="@+id/textViewSha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" \n Ibrahim Sha "
                    android:textAlignment="center"
                    android:textColor="@color/abc_input_method_navigation_guard"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@mipmap/moin" />


                <TextView
                    android:id="@+id/textViewMoin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" \n Moinudeen "
                    android:textAlignment="center"
                    android:textColor="@color/abc_input_method_navigation_guard"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@mipmap/zubair" />


                <TextView
                    android:id="@+id/textViewZubair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text=" \n Mohamed \n Zubair"
                    android:textColor="@color/abc_input_method_navigation_guard"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@mipmap/azar" />

                    <TextView
                        android:id="@+id/textViewSno4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" \n Mohamed \n Azharudeen "
                        android:textAlignment="center"
                        android:textColor="@color/abc_input_method_navigation_guard"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@mipmap/anas" />


                    <TextView
                        android:id="@+id/textViewAnas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=" \n Mohamed Anas"
                        android:textColor="@color/abc_input_method_navigation_guard"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@mipmap/basiths" />


                    <TextView
                        android:id="@+id/textViewBasith"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" \n Sheriff Basith "
                        android:textAlignment="center"
                        android:textColor="@color/abc_input_method_navigation_guard"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@mipmap/basith_air" />


                    <TextView
                        android:id="@+id/textViewSno9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=" \n  Abdul Basith"
                        android:textColor="@color/abc_input_method_navigation_guard"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@mipmap/abusalih" />

                    <TextView
                        android:id="@+id/textViewSnoAbu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" \n Abusalih "
                        android:textAlignment="center"
                        android:textColor="@color/abc_input_method_navigation_guard"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@mipmap/rasool" />


                    <TextView
                        android:id="@+id/textViewSno8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" \n Rasool"
                        android:textAlignment="center"
                        android:textColor="@color/abc_input_method_navigation_guard"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@mipmap/huq" />


                    <TextView
                        android:id="@+id/textViewhuq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" \n Noorul huq"
                        android:textAlignment="center"
                        android:textColor="@color/abc_input_method_navigation_guard"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@mipmap/faris" />


                    <TextView
                        android:id="@+id/textViewFaris"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\n Faris"
                        android:textAlignment="center"
                        android:textColor="@color/abc_input_method_navigation_guard"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
