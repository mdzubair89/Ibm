<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ibm.imfras_baithul_mal.ProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_orange_light"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <TextView
            android:id="@+id/textViewBankAccFixed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="50dp"
            android:paddingTop="15dp"
            android:textAlignment="center"
            android:text="IBM MAIN PANEL"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#000080"
            android:shadowColor="#0000FF"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="2"/>


        <TextView android:id="@+id/textViewDistributionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/textview_border"
            android:textAlignment="center"
            android:textColor="@color/abc_input_method_navigation_guard"
            />

        <TextView android:id="@+id/textViewDistributionValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/textview_border"
            android:textColor="@color/abc_input_method_navigation_guard"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingTop="50dp"
            android:id="@+id/textViewUserEmail"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textAlignment="center"
            android:id="@+id/textViewUserInfo"
            android:text="Your options to navigate through IBM app are as below:"
            android:layout_gravity="center"
            android:paddingBottom="20dp"
            />

        <Button
            android:id="@+id/buttonIbmObj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Introduction" />

        <Button
            android:id="@+id/buttonIbmMembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Committee Members" />

        <Button
            android:id="@+id/buttonIbmAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IBM Bank Account" />

        <Button
            android:id="@+id/buttonManReq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage" />

        <Button
            android:id="@+id/buttonAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About IBM" />

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Logout" />



</LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
